<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/framework_dialog_bg_rotate"
    android:padding="13dp">

    <com.code.library.view.RotateImageView
        android:id="@+id/rotateImageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:src="@drawable/framework_dialog_loading_rotate" />

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/rotateImageView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="正在加载中..."
            android:textColor="@color/bg_dialog_msg_text"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:text="请稍候~"
            android:textColor="@color/bg_dialog_msg_text"
            android:textSize="12dp"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>
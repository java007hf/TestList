<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/framework_dialog_bg_normal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/framework_dialog_bg_normal"
        android:gravity="center" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center" />
    </LinearLayout>

    <View
        android:id="@+id/title_msg_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dialog_divider"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_addview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/framework_dialog_bg_normal"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/framework_dialog_bg_normal"
            android:textSize="13sp"
            android:gravity="left" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="1px"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/msg_btn_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dialog_divider"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/btn_view"
        android:background="@drawable/framework_dialog_bg_normal"
        android:layout_width="match_parent"
        android:layout_height="56dp" >


        <TextView
            android:id="@+id/button_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/framework_dialog_bg_normal"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/blue1"
            android:textSize="18sp"
            android:visibility="gone" />

        <View
            android:id="@+id/btn_divider1"
            android:layout_width="1.0px"
            android:layout_height="wrap_content"
            android:background="@color/bg_dialog_divider"
            android:visibility="gone" />

        <TextView
            android:id="@+id/button_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/framework_dialog_bg_normal"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/bg_dialog_btn_text"
            android:textSize="18sp"
            android:visibility="gone" />

        <View
            android:id="@+id/btn_divider2"
            android:layout_width="1.0px"
            android:layout_height="wrap_content"
            android:background="@color/bg_dialog_divider"
            android:visibility="gone" />

        <TextView
            android:id="@+id/button_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/framework_dialog_bg_normal"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/bg_dialog_btn_text"
            android:textSize="18sp"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>